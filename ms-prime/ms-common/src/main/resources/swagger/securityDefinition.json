{  
  "serenity_key": {
    "type": "apiKey",
  	"name": "serenity_api_key",
      "in": "header"
  }, 
  "serenity_auth": {
    "type": "oauth2",
    "authorizationUrl": "http://www.serenity.com/api/v1/oauth/login",
    "flow": "implicit",
    "scopes": {
      "assertion": "access to all assertion functions",
      "assertion:update": "access to assertion update function",
      "assertion:read": "access to assertion update function",
      "assertion:create": "access to assertion create function"
    }
  }
}